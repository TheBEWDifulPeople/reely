<% if @playlist.errors.any? %>
	<h2>errors prevented this playlist from being saved!</h2>
	<ul>
		<% @playlist.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
  </ul>
<% end %>

<%= form_for @playlist, :html => {:multipart => true} do |f| %>
	<label><%= f.label :playlist_title %></label>
	<%= f.text_field :title %>
	<label><%= f.label :track_title %></label>
	<%= f.text_field :mp3 %>
    
    <% if @playlist.track.present? %>
		<ul class="graphic">
		 	<li>
				<a href="<%= @playlist.track_url.to_s %>">
					<%= @playlist.mp3.to_s %>
				</a>
			</li>
		</ul>
    <% end %>
	
	<%= f.file_field :track , multiple: true, name: "playlist[track]"  %>
	<%= f.submit :class=>"button"%>
<% end %>